<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.DetailNewspaperActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:padding="5dp"
                        android:text="Hell Boy"
                        android:id="@+id/tvTitle"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <TextView
                        android:padding="8dp"
                        android:text="Thứ Tư, ngày 29/5/2019 - 12:30"
                        android:id="@+id/tvTime"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/imageNews"
                        android:layout_width="match_parent"
                        android:layout_height="250sp"
                        android:background="@drawable/ic_launcher_background"/>
                <TextView
                        android:padding="8dp"
                        android:text="iPhone chất lượng tốt với giá dao động trong khoảng 150-300 nghìn đồng."
                        android:id="@+id/tvOverview"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <TextView
                        android:padding="8dp"
                        android:text="iPhone chất lượng tốt với giá dao động trong khoảng 150-300 nghìn đồng. Cần lưu ý rằng đây là giá thay pin cho khách lẻ, đã bao gồm lãi và công thay - còn thực tế, mức giá cửa hàng nhập pin theo số lượng lớn rẻ hơn rất nhiều."
                        android:id="@+id/tvContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
        </ScrollView>

        <include layout="@layout/play_newspaper_layout"
                 android:layout_width="match_parent"
                 android:layout_height="75dp"/>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>